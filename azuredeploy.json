{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Deployment location (from createUiDefinition output)."
      }
    },
    "siteName": {
      "type": "string",
      "metadata": {
        "description": "Web App name (from createUiDefinition output)."
      }
    },
    "tenantId": {
      "type": "string",
      "metadata": {
        "description": "Entra tenant ID (from createUiDefinition output)."
      }
    },
    "authClientId": {
      "type": "string",
      "metadata": {
        "description": "Client ID of the Service Principal (from createUiDefinition output)."
      }
    },
    "authClientSecret": {
      "type": "secureString",
      "metadata": {
        "description": "Client Secret of the Service Principal (from createUiDefinition output)."
      }
    },
    "existingAppPlan": {
      "type": "bool",
      "defaultValue": false,
      "metadata": { "description": "Indicates if an existing App Service Plan will be used." }
    },
    "appServicePlanResourceId": {
      "type": "string",
      "defaultValue": "",
      "metadata": { "description": "Resource ID of existing App Service Plan when existingAppPlan=true." }
    },
    "userAssignedIdentityName": {
      "type": "string",
      "defaultValue": "[concat('id-',parameters('siteName'))]",
      "metadata": { "description": "Name of the user-assigned managed identity to create and associate with the Web App." }
    },
    "TagsByResource": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "TagsByResource mapping from createUiDefinition Tags step."
      }
    },
    "labelScope": {
      "type": "string",
      "defaultValue": "TenantReuse",
      "allowedValues": [ "TenantReuse", "SubscriptionReuse", "ResourceGroupReuse", "NoReuse" ]
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2024-11-01",
      "name": "[parameters('siteName')]",
      "location": "[parameters('location')]",
      "tags": "[if(contains(parameters('TagsByResource'), 'Microsoft.Web/sites'), parameters('TagsByResource')['Microsoft.Web/sites'], json('{}'))]",
      "sku": {
        "name": "B1",
        "tier": "Basic",
        "capacity": 1
      },
      "kind": "linux",
      "properties": {
        "reserved": true // Must be true for Linux
      },
      "condition": "[not(parameters('existingAppPlan'))]"
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2023-01-31",
      "name": "[parameters('userAssignedIdentityName')]",
      "tags": "[if(contains(parameters('TagsByResource'), 'Microsoft.ManagedIdentity/userAssignedIdentities'), parameters('TagsByResource')['Microsoft.ManagedIdentity/userAssignedIdentities'], json('{}'))]",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2024-11-01",
      "name": "[parameters('siteName')]",
      "location": "[parameters('location')]",
      "tags": "[if(contains(parameters('TagsByResource'), 'Microsoft.Web/sites'), parameters('TagsByResource')['Microsoft.Web/sites'], json('{}'))]",
      "kind": "app,linux,container",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('userAssignedIdentityName'))]": {}
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('userAssignedIdentityName'))]",
        "[resourceId('Microsoft.Web/serverfarms', parameters('siteName'))]"
      ],
      "properties": {
        "autoGeneratedDomainNameLabelScope": "[parameters('labelScope')]",
        "serverFarmId": "[if(parameters('existingAppPlan'), parameters('appServicePlanResourceId'), resourceId('Microsoft.Web/serverfarms', parameters('siteName')))]",
        "clientAffinityEnabled": false,
        "httpsOnly": true
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2024-11-01",
      "name": "[concat(parameters('siteName'), '/web')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('siteName'))]"
      ],
      "tags": "[if(contains(parameters('TagsByResource'), 'Microsoft.Web/sites'), parameters('TagsByResource')['Microsoft.Web/sites'], json('{}'))]",
      "properties": {
        "alwaysOn": true,
        "healthCheckPath": "/healthz",
        "http20Enabled": true,
        "appSettings": [
          {
            "name": "AZURE_CLIENT_ID",
            "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('userAssignedIdentityName')), '2023-01-31').clientId]"
          },
          {
            "name": "AZURE_TENANT_ID",
            "value": "[parameters('tenantId')]"
          },
          {
            "name": "IDENTITY_NAME",
            "value": "[parameters('userAssignedIdentityName')]"
          },
          {
            "name": "MICROSOFT_PROVIDER_AUTHENTICATION_SECRET",
            "value": "[parameters('authClientSecret')]"
          },
          {
            "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
            "value": "true"
          },
          {
            "name": "WEBSITE_AUTH_AAD_ALLOWED_TENANTS",
            "value": "[parameters('tenantId')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2024-11-01",
      "name": "[concat(parameters('siteName'), '/authsettingsV2')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('siteName'))]"
      ],
      "tags": "[if(contains(parameters('TagsByResource'), 'Microsoft.Web/sites'), parameters('TagsByResource')['Microsoft.Web/sites'], json('{}'))]",
      "properties": {
        "identityProviders": {
          "globalValidation": {
            "redirectToProvider": "azureActiveDirectory",
            "unauthenticatedClientAction": "RedirectToLoginPage",
            "requireAuthentication": true
          },
          "azureActiveDirectory": {
            "enabled": "true",
            "registration": {
              "clientId": "[parameters('authClientId')]",
              "openIdIssuer": "[concat('https://sts.windows.net/', parameters('tenantId'), '/v2.0')]"
            },
            "login": {
              "disableWWWAuthenticate": false
            },
            "validation": {
              "defaultAuthorizationPolicy": {
                "allowedApplications": [
                  "[parameters('authClientId')]"
                ]
              }
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/sitecontainers",
      "apiVersion": "2024-11-01",
      "name": "[concat(parameters('siteName'), '/main')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('siteName'))]"
      ],
      "tags": "[if(contains(parameters('TagsByResource'), 'Microsoft.Web/sites'), parameters('TagsByResource')['Microsoft.Web/sites'], json('{}'))]",
      "properties": {
        "image": "ghcr.io/fortytwoservices/maester-dashboard:production",
        "targetPort": "5000",
        "isMain": true
      }
    }
  ],
  "outputs": {
    "redirectUri": {
      "type": "string",
      "value": "[uri(concat('https://', reference(resourceId('Microsoft.Web/sites', parameters('siteName')), '2024-11-01').defaultHostName), '/.auth/login/aad/callback')]"
    },
    "webAppUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('siteName')), '2024-11-01').defaultHostName]"
    }
  }
}
